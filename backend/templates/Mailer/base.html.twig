{% block subject %}
    {{ subject }}
{% endblock %}

{% block bodyText %}
    {{ bodyText }}
{% endblock bodyText %}

{% block bodyCss %}
    {% include 'Mailer/base.css.twig' %}
    {% block bodyCssInner %}

    {% endblock bodyCssInner %}
{% endblock bodyCss %}

{% block bodyHtml %}
    {% trans_default_domain 'mail' %}
    <!doctype html>
    <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <title>{{ block('subject') }}</title>
            <style type="text/css">
                {{ include('Mailer/baseMobile.css.twig') }}
            </style>
        </head>
        <body class="">
            <table border="0" cellpadding="0" cellspacing="0" class="body">
                <tr>
                    <td>&nbsp;</td>
                    <td class="container">
                        <div class="content">
                            <span class="preheader">
                                {{ block('subject') }}
                            </span>
                            <table class="header">
                                <tr>
                                    <td class="wrapper">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td class="header-logos">
                                                    <img src="{{ assetUrl }}images/logo-black.png"
                                                         alt="">
                                                    <br />
                                                    <h3>{{ 'mailAppSlogan' | trans }}</h3>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <table class="main">
                                <tr>
                                    <td class="wrapper">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td>
                                                    {{ block('bodyText') }}
                                                </td>
                                            </tr>
                                        </table>
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td>
                                                    <p>
                                                        {{ 'mailQuestionFooter' | trans }}
                                                        <br />
                                                        <a href="mailto:{{ 'mailContactMail' | trans }}">
                                                            {{ 'mailContactMail' | trans }}
                                                        </a>
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <div class="footer">
                                <table border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td class="content-block footer-image">
                                            <img src="{{ assetUrl }}images/logo-black.png" alt="">
                                        </td>
                                        <td class="content-block">
                                            <p class="align-left footer-text">
                                                {{ 'mailFooterLine1' | trans }}
                                                <br />
                                                {{ 'mailFooterLine2' | trans }}
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </table>
        </body>
    </html>
{% endblock bodyHtml %}